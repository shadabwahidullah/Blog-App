<h1>this is a page for creating new post</h1>
<%= form_with model: @post, url: user_posts_url(@current_user, @post), method: :post do |form| %>
  <div>
    <%= form.label :title%>
    <%= form.text_field :title%>
  </div>
  <div>
    <%= form.label :text%>
    <%= form.text_field :text%>
  </div>
  <div>
    <%= form.submit "Create a new post"%>
  </div>
<%end%>